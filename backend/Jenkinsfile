pipeline {
    agent any
    environment {
        DOCKER_HUB_REPO = 'nbowow/ec2test/server'
        DOCKER_HUB_CREDENTIALS = 'docker-credentials' // Jenkins에 저장한 Docker Hub 크리덴셜 ID
        EC2_SERVER_IP = '3.34.192.220'
        EC2_USER = 'ec2-user'
    }

    stages {
        stage('Checkout') {
            steps {
                // GitHub에서 코드 체크아웃
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                dir('backend') { // backend 디렉토리에서 작업
                    configFileProvider([file(credentialsId: 'application.yml-credentials', targetLocation: 'application.yml')]) {
                        script {
                            // Docker 이미지 빌드 및 Docker Hub에 푸시
                            def app = docker.build("${DOCKER_HUB_REPO}:latest", ".")
                            docker.withRegistry('', "${DOCKER_HUB_CREDENTIALS}") {
                                app.push('latest')
                            }
                        }
                    }
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshPublisher(
                    publishers: [
                        sshPublisherDesc(
                            configName: 'EC2_SSH', // Publish over SSH 플러그인 설정 이름
                            transfers: [
                                sshTransfer(
                                    execCommand: """
                                    docker pull ${DOCKER_HUB_REPO}:latest
                                    docker stop backend || true
                                    docker rm backend || true
                                    docker run -d --name backend -p 8080:8080 ${DOCKER_HUB_REPO}:latest
                                    """
                                )
                            ]
                        )
                    ]
                )
            }
        }

    }
    post {
        always {
            // 빌드 결과 알림 (선택 사항)
            echo "Pipeline execution completed!"
        }
    }
}
